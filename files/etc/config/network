config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option ula_prefix 'auto'

# LAN Bridge
config interface 'lan'
	option proto 'static'
	option ipaddr '192.168.2.1'
	option netmask '255.255.255.0'
	option ip6assign '60'
	option device 'br-lan'

config device
	option name 'br-lan'
	option type 'bridge'
	list ports 'eth0'
	option igmp_snooping '1'
	option stp '1'
	# WiFi interfaces will be added to this bridge in the wireless config

# WAN Interface 1: WiFi Client "कौन सा POCO X6"
config interface 'wan_poco'
	option proto 'dhcp'
	option metric '10'

# WAN Interface 2: WiFi Client "OnePlus 7 Pro"
config interface 'wan_oneplus'
	option proto 'dhcp'
	option metric '20'

# WAN Interface 3: USB Tethering (Android - RNDIS)
config interface 'wan_usb_android'
	option proto 'dhcp'
	option device 'usb0'
	option metric '30'

# WAN Interface 4: USB Tethering (iOS - ipheth)
config interface 'wan_usb_ios'
	option proto 'dhcp'
	option device 'eth1' # ipheth usually creates ethX
	option metric '40'
