# This is the first radio, typically the built-in 2.4GHz/5GHz on RPi 4
config wifi-device 'radio0'
	option type 'mac80211'
	# The 'path' option is removed to allow OpenWrt to auto-detect the device
	option channel 'auto'
	option band 'auto' # Let OpenWrt decide the band or set to 2g/5g
	option htmode 'HT20' # Use HT20 for 2.4GHz for compatibility
	option disabled '0'

# This is the second radio, assumed to be a USB WiFi adapter
config wifi-device 'radio1'
	option type 'mac80211'
	# The 'path' option is removed to allow OpenWrt to auto-detect the device
	option channel 'auto'
	option band 'auto' # Let OpenWrt decide the band or set to 2g/5g
	option htmode 'VHT80' # VHT80 is for 5GHz
	option disabled '0'

# WiFi Client 1: Connects to "कौन सा POCO X6" and links to 'wan_poco' interface
config wifi-iface 'sta_poco'
	option device 'radio0' # Use the first radio
	option mode 'sta'
	option network 'wan_poco'
	option ssid 'कौन सा POCO X6'
	option encryption 'psk2'
	option key '00000000'

# WiFi Client 2: Connects to "OnePlus 7 Pro" and links to 'wan_oneplus' interface
config wifi-iface 'sta_oneplus'
	option device 'radio1' # Use the second radio
	option mode 'sta'
	option network 'wan_oneplus'
	option ssid 'OnePlus 7 Pro'
	option encryption 'psk2'
	option key '00000000'