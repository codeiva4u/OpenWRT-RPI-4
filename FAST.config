# Ultra-Fast OpenWRT Build Configuration for Raspberry Pi 4
# Optimized for 10-minute builds with essential features only

# Target System
CONFIG_TARGET_bcm27xx=y
CONFIG_TARGET_bcm27xx_bcm2711=y
CONFIG_TARGET_bcm27xx_bcm2711_DEVICE_rpi-4=y

# Essential Base System ONLY
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_kernel=y
CONFIG_PACKAGE_kmod-lib-crc-ccitt=y
CONFIG_PACKAGE_kmod-lib-crc16=y
CONFIG_PACKAGE_libgcc=y
CONFIG_PACKAGE_libc=y

# Boot essentials
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_netifd=y
CONFIG_PACKAGE_fstools=y

# Network Core - Minimal
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables=y

# Bridge Support - Essential Only
CONFIG_PACKAGE_bridge-utils=y
CONFIG_PACKAGE_kmod-bridge=y
CONFIG_PACKAGE_relayd=y
CONFIG_PACKAGE_ebtables=y

# USB Tethering - Essential Only
CONFIG_PACKAGE_kmod-usb-net=y
CONFIG_PACKAGE_kmod-usb-net-rndis=y
CONFIG_PACKAGE_kmod-usb-net-cdc-ether=y
CONFIG_PACKAGE_kmod-usb-net-ipheth=y
CONFIG_PACKAGE_usb-modeswitch=y

# WiFi - Essential Only
CONFIG_PACKAGE_kmod-brcmfmac=y
CONFIG_PACKAGE_kmod-cfg80211=y
CONFIG_PACKAGE_kmod-mac80211=y
CONFIG_PACKAGE_wpad-basic-mbedtls=y
CONFIG_PACKAGE_hostapd-common=y
CONFIG_PACKAGE_wpa-supplicant=y
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_iwinfo=y

# LuCI - Minimal
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_libuhttpd=y
CONFIG_PACKAGE_rpcd=y

# Essential utilities only
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_curl=y

# Build optimizations
CONFIG_CCACHE=y
CONFIG_BUILD_LOG=y
CONFIG_TARGET_OPTIMIZATION="-Os -pipe -mcpu=cortex-a72"
CONFIG_TARGET_OPTIONS=y
CONFIG_SOFT_FLOAT=n
CONFIG_TARGET_ROOTFS_EXT4FS=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y

# Disable non-essential features for speed
# CONFIG_PACKAGE_luci-ssl is not set
# CONFIG_PACKAGE_luci-theme-argon is not set 
# CONFIG_PACKAGE_adguardhome is not set
# CONFIG_PACKAGE_htop is not set
# CONFIG_PACKAGE_nano is not set
# CONFIG_PACKAGE_vim is not set